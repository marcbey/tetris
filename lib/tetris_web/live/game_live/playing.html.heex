<section class="min-h-screen flex items-center justify-center overflow-hidden" style="background: none;">
  <div class="bg-black bg-opacity-80 p-4 sm:p-8 md:p-10 rounded-xl shadow-2xl border-4 border-pink-500 flex flex-col items-center justify-center w-full max-w-md mx-2">
    <h2 class="text-2xl sm:text-3xl md:text-4xl neon-text mb-6 sm:mb-8 text-center leading-tight break-words" style="font-family: 'Press Start 2P', monospace;">Score <%= @game.score %></h2>
    <div phx-window-keydown="keydown" phx-window-keyup="keyup" class="w-full flex justify-center">
      <%= render_board(assigns) %>
    </div>
  </div>
</section>
